{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/send-email",
        "methods": ["POST"],
        "dest": "backend/server.js"  
      },
      {
        "src": "/",
        "methods": ["GET"],
        "dest": "backend/server.js"  
      }
    ]
  }
  